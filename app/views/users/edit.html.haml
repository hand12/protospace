= form_for(@user) do |f|
  .container.user-new
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, placeholder: "Username", autofocus: true, required: true
            .user-image.col-md-2
              = image_tag(@user.avatar.thumb, class: "user-image-box")
              = f.file_field :avatar
              %button.btn.btn-primary Change image
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, placeholder: "member"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, cols: 30, rows: "4", placeholder: "profile"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :work, cols: 30, rows: "4", placeholder: "work"

      .row.text-center.user-btn
        = f.submit "Save", class: "btn btn-lg btn-primary btn-block"
