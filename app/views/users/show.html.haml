.container.user-page
  %header.user-nav
    .media
      .media-left
        = image_tag @user.avatar, class: 'media-object', size: '64x64'
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.name
          %span.label.label-default.project-number
            = @products.count
            %i Projects
        .proto-user
          %span.degree
          = @user.member
        .row
          .col-md-6
            %h4 Profile
            = @user.profile
          .col-md-6
            %h4 Works
            = @user.work
.container.proto-list
  .row
    = render @products
.text-center
  %ul.pagination
    = paginate @products
