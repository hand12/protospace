.container.user-page
  %header.user-nav
    .media
      .media-left
        %a{:href => "#"}
          = image_tag current_user.avatar, class: 'media-object', size: '64x64'
      .media-body
        %h4#top-aligned-media.media-heading
          = current_user.name
          %span.label.label-default.project-number
            = @products.count
            %i Projects
        .proto-user
          %span.degree #{current_user.member}
        .row
          .col-md-6
            %h4 Profile
            = current_user.profile
          .col-md-6
            %h4 Works
            = current_user.work