= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .container.user-new{:action => ""}
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, placeholder: "Username", autofocus: true
            .user-image.col-md-2{:style => 'background-image: url(http://泣ける動画.com/wp-content/uploads/2015/01/t0205-01.jpg);'}
              %button.btn.btn-primary Change image
              %input{:type => "file"}/
          = f.email_field :email, placeholder: "email", class: "user-email"
          = f.password_field :password, placeholder: "password", class: "user-password"
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, placeholder: "member"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, cols: 30, rows: "4", placeholder: "profile"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12

      .row.text-center.user-btn
        = f.submit "Save", class: "btn btn-lg btn-primary btn-block"
