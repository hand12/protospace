- if like.blank?
  = button_to product_likes_path(product.id), class: 'btn btn-default', remote: true do
    = image_tag("icon_heart.svg")
    Like
    %span.num
      = product.likes_count
- else
  = button_to product_like_path(product.id, like.id), class: 'btn btn-default', method: :delete, remote: true do
    = image_tag("icon_heart_red.svg")
    Like
    %span.num
      = product.likes_count
