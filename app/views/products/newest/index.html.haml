.jumbotron
  .container.text-center
    = image_tag("header_logo.png", :alt => "PROTO TYPE - SHARE THE PROTOTYPE", :height => "73px")

.filter-nav
  .container
    .row.clearfix
      %ul.nav.nav-pills.left
        %li#js-ranking{role: 'presentation'}
          = link_to 'Pupular', root_path, class: 'btn btn-default right'
        %li#js-newest{role: 'presentation'}
          = link_to 'Newest', products_newest_index_path, class: 'btn btn-default right'
      %ul.nav.nav-pills.right
        %li#js-tags{role: 'presentation'}
          = link_to 'View Tags', tags_path, class: 'btn btn-default right'

.container.proto-list
  .row
    - @products.each do |product|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to (image_tag product.main_image_url), product_path(product.id)
          .caption
            %h3
              = product.title
            .proto-meta
              .proto-user
                %a{:href => "#"} #{current_user.name}
              .proto-posted
                = product.created_at.strftime("%b %d")
            %ul.proto-tag-list.list-inline
              - product.tags.each do |tag|
                %li
                  = link_to "#{tag.name}", tag_path(tag.id), class: "btn btn-default"
.text-center
  %ul.pagination
    = paginate @products
