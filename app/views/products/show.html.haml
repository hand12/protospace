.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          %a{:href => "#"}
            = image_tag @product.user.avatar.url, size: "64x64", class: "media-object"
        .media-body
          %h4#top-aligned-media.media-heading
            = @product.title
          .proto-user
          - if user_signed_in?
            %a{:href => ""}
              = current_user.name
            %span.degree
              = current_user.member
    .col-md-6.text-right#like
      = render partial: 'likes/like', locals: {product: @product, like: @like}
    .row
      .col-md-9
        = image_tag(@product.main_image.image_url, class: 'img-responsive')
      .col-md-3
        %ul.proto-sub-list.list-group
          %li.list-group-item
            = image_tag(@product.sub_image_url(0), class: 'img-responsive')
          %li.list-group-item
            = image_tag(@product.sub_image_url(1), class: 'img-responsive')
          %li.list-group-item
            = image_tag(@product.sub_image_url(2), class: 'img-responsive')
    .row.proto-description
      .col-md-3
        %h4 Catch Copy
        %p
          = @product.catchcopy
      .col-md-6
        %h4 Concept
        %p
          = @product.concept
      .col-md-3
        %h4 Tag List
        %ul.proto-tag-list.list-inline
          - @product.tags.each do |tag|
            %li
              = link_to "#{tag.name}", tag_path(tag.id), class: 'btn btn-default'
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num (#{@comments.count})
    .col-md-8
      #comment
        = render partial: 'comments/comment', collection: @comments
      .form-inline
        = form_for [@product, @comment], remote: true do |f|
          %h4 Write a comment
          .row
            .form-group.col-md-10
              = f.text_area :comment, placeholder: "Youy comments", class: 'form-control'
            .form-group.col-md-2
              = f.submit 'Comment', class: 'btn btn-primary'
